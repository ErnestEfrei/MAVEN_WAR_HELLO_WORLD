pipeline{
    agent any
    tools {
      maven 'MVN_HOME'
    }

stages{
    stage('Maven Build') {
        steps {
            echo 'Trigger a maven build'
            sh "mvn clean package"
        }
    }
       
    stage('Docker Build'){
        steps{
            echo 'Build ernestefrei/devopsproject'
            sh "docker build -t ernestefrei/devopsproject . "
        }
    }
        
    stage('DockerHub Push'){
        steps{
            echo 'Login to Docker-Hub with docker-hub-pass credentials'
            withCredentials([usernamePassword(credentialsId: 'docker-hub-pass', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
            }

            echo 'Push Docker image to Docker Hub'
            sh "docker push ernestefrei/devopsproject:latest"
        }
    }
  
    stage('Docker Deploy'){
            steps{
                echo 'Deploy Docker'
                withCredentials([usernamePassword(credentialsId: 'docker-hub-pass', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh "ansible-playbook deploy-docker.yml --args user=${DOCKER_USERNAME} password=${DOCKER_PASSWORD}"
                }
            }
        }        
    }
    
}
